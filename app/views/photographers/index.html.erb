<div>
  <div class="container-fluid">
    <h1>
      List of all Photographers
    </h1>
  </div>
</div>

<hr>

<div class="accordion accordion-flush accordion-" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
        <h2>Add a New Photographer</h2>
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div>
          <form action="/insert_photographer" method="post">
            <div class="row mb-2">
              <label for="name_box" class="col-auto col-form-label">
                Name
              </label>

              <input class="form-control" type="text" id="name_box" name="query_name">
            </div>

            <div class="row mb-2">
              <label for="instagram_box" class="col-auto col-form-label">
                Instagram
              </label>

              <input class="form-control" type="url" id="instagram_box" name="query_instagram">
            </div>

            <div class="row mb-2">
              <label for="contact_email_box" class="col-auto col-form-label">
                Contact Email
              </label>

              <input class="form-control" type="email" id="contact_email_box" name="query_contact_email">
            </div>

            <div class="row mb-2">
              <label for="website_box" class="col-auto col-form-label">
                Website
              </label>

              <input class="form-control" type="url" id="website_box" name="query_website">
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1">

              <label class="form-check-label" for="contacted_box" class="col-auto col-form-label">Contacted</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1">

              <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">Chosen</label>
            </div>
            
            <div>
              <input class="form-check-input" type="checkbox" id="signed_contract_box" name="query_signed_contract" value="1">

              <label class="form-check-label" for="signed_contract_box" class="col-auto col-form-label">Signed Contract</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1">

              <label class="form-check-label" for="paid_deposit_box" class="col-auto col-form-label">Paid Deposit</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="final_payment_box" name="query_final_payment" value="1">

              <label class="form-check-label" for="final_payment_box" class="col-auto col-form-label">Final Payment</label>
            </div>

            <div class="row mb-2">
              <label for="price_options_box" class="col-auto col-form-label">
                Price Options
              </label>

              <textarea class="form-control" id="price_options_box" name="query_price_options" rows="3"></textarea>
            </div>

            <div class="row mb-2">
              <label for="photo_url_box" class="col-auto col-form-label">
                Photo URL
              </label>

              <input class="form-control" type="text" id="photo_url_box" name="query_photo_url">
            </div>

            <div class="row mb-2">
              <label for="pdf_box" class="col-auto col-form-label">
                PDF
              </label>

              <input class="form-control" type="file" id="pdf_box" name="query_pdf">
            </div>

            <div class="row mb-2">
              <label for="deposit_box" class="col-auto col-form-label">
                Deposit %
              </label>

              <input type="number" id="deposit_box" name="query_deposit" value = "0">
            </div>

            <div class="row mb-2">
              <label for="final_price_box" class="col-auto col-form-label">
                Final Price $
              </label>

              <input type="number" id="final_price_box" name="query_final_price" value = "0">
            </div>

            <div class="row mb-2">
              <label for="notes_box" class="col-auto col-form-label">
                Notes
              </label>

              <textarea class="form-control" id="notes_box" name="query_notes" rows="3"></textarea>
            </div>

            <div style="height: 10px;"></div>

            <button type="submit" class="btn btn-primary btn-sm">
              Create Photographer
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>
<div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <thead>
        <tr>
          <th>
            ID
          </th>

          <th>
            Name
          </th>

          <th>
            Instagram
          </th>

          <th>
            Contact Email
          </th>

          <th>
            Website
          </th>

          <th>
            Contacted
          </th>

          <th>
            Chosen
          </th>

          <th>
            Signed Contract
          </th>

          <th>
            Paid Deposit
          </th>

          <th>
            Final Payment
          </th>

          <th>
            Price Options
          </th>

          <th>
            Photo URL
          </th>

          <th>
            PDF
          </th>

          <th>
            Deposit
          </th>

          <th>
            Final Price
          </th>

          <th>
            Notes
          </th>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_photographers.each do |a_photographer| %>
          <tr>
            <td>
              <%= a_photographer.id %>
            </td>

            <td>
              <%= a_photographer.name %>
            </td>

            <td>
              <%= a_photographer.instagram %>
            </td>

            <td>
              <%= a_photographer.contact_email %>
            </td>

            <td>
              <a href="<%= a_photographer.website %>"><%= a_photographer.website %></a>
            </td>

            <td style="text-align: center;">
              <% if a_photographer.contacted == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_photographer.chosen == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_photographer.signed_contract == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_photographer.paid_deposit == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td style="text-align: center;">
              <% if a_photographer.final_payment == true %>
                <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
              <% else %>
                <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
              <% end %>
            </td>

            <td>
              <%= a_photographer.price_options %>
            </td>

            <td>
              <img src = "<%= a_photographer.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
            </td>

            <td>
              <%= a_photographer.pdf %>
            </td>

            <td>
              <%= a_photographer.deposit %>
            </td>

            <td>
              <%= a_photographer.final_price %>
            </td>

            <td>
              <%= a_photographer.notes %>
            </td>

            <td>
              <%= time_ago_in_words(a_photographer.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_photographer.updated_at) %> ago
            </td>

            <td>
              <a href="/photographers/<%= a_photographer.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
