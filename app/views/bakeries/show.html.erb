<div>
  <div class="container-fluid">
      <a href="/bakeries" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Back
      </a>
  </div>
  <div class="text-center">
    <h1>
      <a href="<%= @the_bakery.website %>"><%= @the_bakery.name %></a>
    </h1>

    <div style="height: 10px;"></div>

    <div class="row mb-4">
        <% if @the_bakery.photo_url.blank? %>
        <% else %>
        <img src = "<%= @the_bakery.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
        <% end %>
    </div>
  </div>
</div>

<div>
  <div class="container text-center">
    <div class="row mb-4">
      <div class="col">
        <h4>Address</h4>
        <%= @the_bakery.address %>
      </div>
      <div class="col">
        <h4>Neighborhood</h4>
        <%= Neighborhood.where({ :id => @the_bakery.neighborhood_id }).at(0).name %>
      </div>
    </div>
    
    <div class="row mb-4">
      <div class="col">
        <h4>Contact Name</h4>
          <% if @the_bakery.contact_name.blank? %>
            <p>None provided</p>
          <% else %>
            <%= @the_bakery.contact_name %>
          <% end %>
      </div>
      <div class="col">
        <h4>Contact Email</h4>
          <% if @the_bakery.contact_email.blank? %>
            <p>None provided</p>
          <% else %>
            <%= @the_bakery.contact_email %>
          <% end %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col">
        <h4>Contacted</h4>
        <% if @the_bakery.contacted == true %>
          <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
        <% else %>
          <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
        <% end %>
      </div>
      <div class="col">
        <h4>Tried</h4>
        <% if @the_bakery.tried == true %>
          <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
        <% else %>
          <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
        <% end %>
      </div>
      <div class="col">
        <h4>Chosen</h4>
          <% if @the_bakery.chosen == true %>
          <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
        <% else %>
          <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
        <% end %>
      </div>
    </div>

    <div class="row mb-4">
      <div class="col">
        <h4>Price Options</h4>
          <% if @the_bakery.price_options.blank? %>
            <p>None provided</p>
          <% else %>
            <%= @the_bakery.price_options %>
          <% end %>
      </div>
      <div class="col">
        <h4>Deposit</h4>
        <%= @the_bakery.deposit.to_fs( :percentage, { :precision => 0 } ) %>
      </div><div class="col">
        <h4>PDF</h4>
        <% if @the_bakery.pdf.blank? %>
          <p>None provided</p>
        <% else %>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#pdfModal">
            View PDF
          </button>

          <div class="modal fade" id="pdfModal" tabindex="-1" aria-labelledby="pdfModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="pdfModalLabel">PDF Preview</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <embed src="/public/pdfs<%= @the_bakery.pdf %>.pdf" type="application/pdf" width="100%" height="400px">
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col">
        <h4>Notes</h4>
        <%= @the_bakery.notes %>
          <% if @the_bakery.notes.blank? %>
            <p>None provided</p>
          <% else %>
            <%= @the_bakery.notes %>
          <% end %>
      </div>
    </div>

    <div class="row mb-4">

    </div>

    <% if @the_bakery.chosen == true %>
      <div class="row mb-4">
        <div class="col">
          <h4>Final Price</h4>
          <%= @the_bakery.final_price.to_fs(:currency) %>
        </div>
        <div class="col">
          <h4>Signed Contract</h4>
          <% if @the_bakery.signed_contract == true %>
            <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
          <% else %>
            <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
          <% end %>
        </div>
        <div class="col">
          <h4>Paid Deposit</h4>
          <% if @the_bakery.paid_deposit == true %>
            <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
          <% else %>
            <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
          <% end %>
        </div>
        <div class="col">
          <h4>Final Payment</h4>
          <% if @the_bakery.final_payment == true %>
            <div><h4 class="text-success" data-bs-toggle="tooltip"> &#10004</h4></div>
          <% else %>
            <div><h4 class="text-danger" data-bs-toggle="tooltip"> &#10008</h4></div>
          <% end %>
        </div>
      </div>

    <% end %>

    <div class="row mb-4">
      <div class="col">
        <h4>Created At</h4>
        <%= time_ago_in_words(@the_bakery.created_at) %> ago
      </div>
      <div class="col">
        <h4>Updated At</h4>
        <%= time_ago_in_words(@the_bakery.updated_at) %> ago
      </div>
    </div>
  </div>
</div>

<hr>

<div>
  <div class="container-fluid">
    <h2>
      Edit Bakery
    </h2>

    <div style="height: 10px;"></div>

    <form action="/modify_bakery/<%= @the_bakery.id %>"  method="post" class="container-fluid">
      <div class="row mb-2">
        <label for="name_box" class="col-auto col-form-label">
          Name
        </label>
        
        <div class="col-auto">
          <input class="form-control" type="text" id="name_box" name="query_name" value="<%= @the_bakery.name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="address_box" class="col-auto col-form-label">
          Address
        </label>

        <div class="col-sm-4">
          <input class="form-control" type="text" id="address_box" name="query_address" value="<%= @the_bakery.address %>">
        </div>
      </div>
      
      <div class="row mb-2">
        <label for="neighborhood_name_box" class="col-auto col-form-label">
          Neighborhood
        </label>

        <div class="col-auto col-form-label">
          <select id="neighborhood_name_box" name="query_neighborhood_name" value="<%= @the_bakery_neighborhood.name %>">
            <% @list_of_neighborhoods.each do |a_neighborhood| %>
              <% if a_neighborhood.id == @the_bakery.neighborhood_id%>
                <option value="<%= a_neighborhood.name %>" selected><%= a_neighborhood.name %></option>
              <% else %>
                <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
              <% end %>
              
            <% end %>
          </select>
        </div>
      </div>

      <div class="row mb-2">
        <label for="website_box" class="col-auto col-form-label">
          Website
        </label>
        
        <div class="col-sm-6">
          <input class="form-control" type="url" id="website_box" name="query_website" value="<%= @the_bakery.website %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="photo_url_box" class="col-auto col-form-label">
          Photo URL
        </label> 

        <div class="col-sm-10">
          <input class="form-control" type="text" id="photo_url_box" name="query_photo_url" value="<%= @the_bakery.photo_url %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="contact_name_box" class="col-auto col-form-label">
          Contact Name
        </label>
        
        <div class="col-auto">
          <input class="form-control" type="text" id="contact_name_box" name="query_contact_name" value="<%= @the_bakery.contact_name %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="contact_email_box" class="col-auto col-form-label">
          Contact Email
        </label>

        <div class="col-auto">
          <input class="form-control" type="email" id="contact_email_box" name="query_contact_email" value="<%= @the_bakery.contact_email %>">
        </div>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1" <%= "checked" if @the_bakery.contacted %>>

        <label class="form-check-label" for="contacted_box" class="col-auto col-form-label">
          Contacted
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="tried_box" name="query_tried" value="1" <%= "checked" if @the_bakery.tried %>>

        <label class="form-check-label" for="tried_box" class="col-auto col-form-label">
          Tried
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1" <%= "checked" if @the_bakery.chosen %>>

        <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">
          Chosen
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="signed_contract_box" name="query_signed_contract" value="1" <%= "checked" if @the_bakery.signed_contract %>>

        <label class="form-check-label" for="signed_contract_box" class="col-auto col-form-label">
          Signed Contract
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="paid_deposit_box" name="query_paid_deposit" value="1" <%= "checked" if @the_bakery.paid_deposit %>>

        <label class="form-check-label" for="paid_deposit_box" class="col-auto col-form-label">
          Paid Deposit
        </label>
      </div>

      <div>
        <input class="form-check-input" type="checkbox" id="final_payment_box" name="query_final_payment" value="1" <%= "checked" if @the_bakery.final_payment %>>

        <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">
          Final Payment
        </label>
      </div>

      <div class="row mb-2">
        <label for="price_options_box" class="col-auto col-form-label">
          Price Options
        </label>

        <div class="col-auto">
          <textarea class="form-control" id="price_options_box" name="query_price_options"><%= @the_bakery.price_options %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="pdf_box" class="col-auto col-form-label">
          PDF
        </label>

        <div class="col-auto">
          <input class="form-control" type="file" id="pdf_box" name="query_pdf" value="<%= @the_bakery.pdf %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="notes_box" class="col-auto col-form-label">
          Notes
        </label>

        <div class="col-auto">
          <textarea class="form-control" id="notes_box" name="query_notes"><%= @the_bakery.notes %></textarea>
        </div>
      </div>

      <div class="row mb-2">
        <label for="deposit_box" class="col-auto col-form-label">
          Deposit %
        </label>

        <div class="col-auto">
          <input class="form-control" type="text" id="deposit_box" name="query_deposit" value="<%= @the_bakery.deposit.to_fs( :percentage, { :precision => 0 } ) %>">
        </div>
      </div>

      <div class="row mb-2">
        <label for="final_price_box" class="col-auto col-form-label">
          Final Price
        </label>

        <div class="col-auto">
          <input class="form-control" type="text" id="final_price_box" name="query_final_price" value="<%= @the_bakery.final_price.to_fs(:currency) %>">
        </div>
      </div>

      <div style="height: 5px;"></div>

      <div>
        <button type="submit" class="btn btn-primary btn-sm">
          Update Bakery
        </button>
      </div>
    </form>
  </div>

  <div style="height: 10px;"></div>

  <div>
    <form action="/delete_bakery/<%= @the_bakery.id %>"  method="get">
      <button type="submit" class="btn btn-danger btn-sm mx-4">
        Delete Bakery
      </button>
    </form>
  </div>
</div>

<hr>
