<div>
  <div class="container-fluid">
    <h1>
      List of all Hotels
    </h1>
  </div>
</div>

<hr>

<div class="accordion accordion-flush accordion-" id="accordion_hotel">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed custom-green"  type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
        <h2>Add a New Hotel</h2>
      </button>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordion_hotel">
      <div class="accordion-body">
        <div>
          <form action="/insert_hotel" method="post" enctype="multipart/form-data">
          <%= csrf_meta_tags %>
            <div class="row mb-2">
              <label for="name_box" class="col-auto col-form-label">
                Name
              </label>

              <div class="col-auto">
                <input class="form-control" type="text" id="name_box" name="query_name">
              </div>
            </div>

            <div class="row mb-2">
              <label for="address_box" class="col-auto col-form-label">
                Address
              </label>

              <div class="col-sm-4">
                <input class="form-control" type="text" id="address_box" name="query_address">
              </div>
            </div>

            <div class="row mb-2">
              <label for="neighborhood_name_box" class="col-auto col-form-label">
                Neighborhood
              </label>

              <div class="col-auto col-form-label">
                <select id="neighborhood_name_box" name="query_neighborhood_name">
                  <% @list_of_neighborhoods.each do |a_neighborhood| %>
                    <option value="<%= a_neighborhood.name %>"><%= a_neighborhood.name %></option>
                  <% end %>
                </select>
              </div>
            </div>

            <div class="row mb-2">
              <label for="website_box" class="col-auto col-form-label">
                Website
              </label>

              <div class="col-sm-6">
                <input class="form-control" type="url" id="website_box" name="query_website">
              </div>
            </div>

            <div class="row mb-2">
              <label for="photo_url_box" class="col-auto col-form-label">
                Photo URL
              </label>

              <div class="col-sm-10">
                <input class="form-control" type="text" id="photo_url_box" name="query_photo_url">
              </div>
            </div>

            <div class="row mb-2">
              <label for="contact_name_box" class="col-auto col-form-label">
                Contact Name
              </label>

              <div class="col-auto">
                <input class="form-control" type="text" id="contact_name_box" name="query_contact_name">
              </div>
            </div>

            <div class="row mb-2">
              <label for="contact_email_box" class="col-auto col-form-label">
                Contact Email
              </label>

              <div class="col-sm-3">
                <input class="form-control" type="email" id="contact_email_box" name="query_contact_email">
              </div>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="contacted_box" name="query_contacted" value="1">

              <label class="form-check-label" for="contacted_box" class="col-auto col-form-label">Contacted</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="block_discount_box" name="query_block_discount" value="1">

              <label class="form-check-label" for="block_discount_box" class="col-auto col-form-label">Block Discount</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="chosen_box" name="query_chosen" value="1">

              <label class="form-check-label" for="chosen_box" class="col-auto col-form-label">Chosen</label>
            </div>

            <div>
              <input class="form-check-input" type="checkbox" id="signed_contract_box" name="query_signed_contract" value="1">

              <label class="form-check-label" for="signed_contract_box" class="col-auto col-form-label">Signed Contract</label>
            </div>

            <div class="row mb-2">
              <label for="minimum_rooms_box" class="col-auto col-form-label">
                Minimum rooms
              </label>

              <div class="col-auto">
                <input class="form-control" type="number" id="minimum_rooms_box" name="query_minimum_rooms" value="0">
              </div>
            </div>

            <div class="row mb-2">
              <label for="price_options_box" class="col-auto col-form-label">
                Price Options
              </label>

              <div class="col-auto">
                <textarea class="form-control" id="price_options_box" name="query_price_options" rows="3"></textarea>
              </div>
            </div>

            <div class="row mb-2">
              <label for="pdf_box" class="col-auto col-form-label">
                PDF
              </label>

              <div class="col-auto">
                <input class="form-control" type="file" id="pdf_box" name="query_pdf">
              </div>
            </div>

            <div class="row mb-2">
              <label for="notes_box" class="col-auto col-form-label">
                Notes
              </label>

              <div class="col-auto">
                <textarea class="form-control" id="notes_box" name="query_notes" rows="3"></textarea>
              </div>
            </div>

            <div style="height: 5px;"></div>

            <button type="submit" class="btn btn-primary btn-sm">
              Create Hotel
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div>
  <div class="table-responsive m-3">
    <table class="table table-bordered table-striped table-hover table-sm align-middle">
      <thead>
        <tr>
          <th>
            Name
          </th>

          <th>
            Address
          </th>

          <th>
            Neighborhood
          </th>

          <th>
            Website
          </th>

          <th>
            Photo URL
          </th>

          <th>
            Contact Name
          </th>

          <th>
            Contact Email
          </th>

          <th>
            Contacted
          </th>

          <th>
            Block Discount
          </th>

          <th>
            Chosen
          </th>

          <th>
            Signed Contract
          </th>

          <th>
            Minimum rooms
          </th>

          <% if current_user&.admin? %>
            <th>
              Price Options
            </th>
          <% end %>

          <th>
            PDF
          </th>

          <% if current_user&.admin? %>
            <th>
              Notes
            </th>
          <% end %>

          <th>
            Created at
          </th>

          <th>
            Updated at
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody class="table-group-divider">
        <% @list_of_hotels.each do |a_hotel| %>
          <tr>
            <td>
              <%= a_hotel.name %>
            </td>

            <td>
              <%= a_hotel.address %>
            </td>

            <td>
              <%= Neighborhood.where({ :id => a_hotel.neighborhood_id }).at(0).name %>
            </td>

            <td>
              <a href="<%= a_hotel.website %>"><%= a_hotel.website %></a>
            </td>

            <td>
              <img src = "<%= a_hotel.photo_url %>" class="d-block mx-auto" style="width: auto; height: 200px;"></a>
            </td>

            <td>
              <%= a_hotel.contact_name %>
            </td>

            <td>
              <%= a_hotel.contact_email %>
            </td>

            <td>
              <%= a_hotel.contacted %>
            </td>

            <td>
              <%= a_hotel.chosen %>
            </td>

            <td>
              <%= a_hotel.signed_contract %>
            </td>

            <td>
              <%= a_hotel.block_discount %>
            </td>

            <td>
              <%= a_hotel.minimum_rooms.round(0) %>
            </td>

            <% if current_user&.admin? %>
              <td>
                <%= a_hotel.price_options %>
              </td>
            <% end %>

            <td>
              <%= a_hotel.pdf %>
            </td>

            <% if current_user&.admin? %>
              <td>
                <%= a_hotel.notes %>
              </td>
            <% end %>

            <td>
              <%= time_ago_in_words(a_hotel.created_at) %> ago
            </td>
            <td>
              <%= time_ago_in_words(a_hotel.updated_at) %> ago
            </td>

            <td>
              <a href="/hotels/<%= a_hotel.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
